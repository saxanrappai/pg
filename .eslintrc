{
  "env": {
    "browser": true,
    "node": true,
    "es6": false
  },
  "globals": {
    "__DEV__": true,
    "__SERVER__": true
  },
  "ecmaFeatures": {
    "jsx": false
  },
  "rules": {
    // Strict mode
    "strict": 0,

    // Code style
    "indent": [2, 2],
    "quotes": [2, "single"],
    "no-unused-vars": 0,
    "no-underscore-dangle": 0
  }
}